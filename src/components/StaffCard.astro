---
import AvailabilityDecode from "./AvailabilityDecode";

interface Props {
    member: {
        cid: number;
        name: string;
        title: string;
        email: string;
        country?: string;
        avatar?: string;
        availability?: string;
    };
}

const { member } = Astro.props;
---

<article class="group relative bg-white dark:bg-gray-800 rounded-xl shadow-sm hover:shadow-xl transition-all duration-300 border border-gray-200 dark:border-gray-700 overflow-hidden w-80">
    {/* Card Content */}
    <div class="p-3">
        <div class="flex items-start gap-4">
            {/* Avatar */}
            <div class="relative flex-shrink-0">
                <div class="w-20 h-20 rounded-xl overflow-hidden ring-2 ring-gray-200 dark:ring-gray-700">
                    <img 
                        src={member.avatar || "/img/avatar.jpg"} 
                        alt={member.name}
                        class="w-full h-full object-cover"
                        loading="lazy"
                    />
                </div>
                {/* Availability Badge */}
                {member.availability && (
                    <div class="absolute -bottom-1 -right-1 bg-white dark:bg-gray-800 rounded-full p-0.5 ring-2 ring-white dark:ring-gray-800 shadow-sm">
                        <AvailabilityDecode Availability={member.availability} variant="badge" />
                    </div>
                )}
            </div>

            {/* Info */}
            <div class="flex-1 min-w-0">
                <p class="text-xs font-mono text-gray-500 dark:text-gray-400">
                    {member.cid ?member.cid : "‌‌‌"}
                </p>
                <span class="text-base font-semibold text-gray-900 dark:text-white truncate inline-flex gap-1 items-center">
                    {member.name}
                    {member.country && (
                        <img 
                            src={`/img/icons/${member.country}.svg`} 
                            alt={member.country}
                            class="w-4 h-4 flex-shrink-0 opacity-80"
                            loading="lazy"
                        />
                    )}
                </span>
                <div class="flex items-center gap-2">
                    <p class="text-xs text-gray-600 dark:text-gray-400 truncate flex-1">
                        {member.title}
                    </p>
                </div>
                
                {/* Email Link */}
                <a 
                    href={`mailto:${member.email}`}
                    class="inline-flex items-center gap-1.5 text-xs font-medium text-secondary hover:text-secondary/80 transition-colors group/link"
                    aria-label={`Email ${member.name}`}
                >
                    <svg xmlns="http://www.w3.org/2000/svg" class="w-3.5 h-3.5 group-hover/link:translate-x-0.5 transition-transform" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                        <path stroke-linecap="round" stroke-linejoin="round" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <span class="truncate">Contact</span>
                </a>
            </div>
        </div>
    </div>

    {/* Hover Effect Overlay */}
    <div class="absolute inset-0 bg-gradient-to-br from-primary/5 via-primary/2 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 pointer-events-none rounded-xl"></div>
</article>

