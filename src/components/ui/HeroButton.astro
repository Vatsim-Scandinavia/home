---
const { href, text, color } = Astro.props;
---

<a 
    href={href} 
    class={`${color} xl:flex-1 inline-flex items-center justify-center whitespace-nowrap rounded-md text-lg font-semibold ring-offset-background transition-all focus-visible:outline-none focus-visible:ring-2 focus-visible:ring-ring focus-visible:ring-offset-2 disabled:pointer-events-none disabled:opacity-50 px-6 py-3 text-white hover:opacity-90 hover:shadow-lg active:scale-[0.98]`} 
    target="_blank"
    rel="noopener noreferrer"
>
    {text}
</a>
